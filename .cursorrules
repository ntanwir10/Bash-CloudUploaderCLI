{
    "name": "Bash-CloudUploaderCLI",
    "description": "A bash-based CLI tool for uploading files to AWS S3",
    "rules": [
        {
            "pattern": "*.sh",
            "group": "scripts",
            "description": "Bash script files"
        },
        {
            "pattern": "*.md",
            "group": "documentation",
            "description": "Project documentation"
        },
        {
            "pattern": "*.json",
            "group": "config",
            "description": "Configuration files"
        },
        {
            "pattern": "tests/*",
            "group": "tests",
            "description": "Test files"
        },
        {
            "pattern": ".env*",
            "group": "secrets",
            "description": "Environment variables and secrets"
        }
    ],
    "groups": {
        "scripts": {
            "description": "Core script files for the CLI tool"
        },
        "documentation": {
            "description": "Project documentation and guides"
        },
        "config": {
            "description": "AWS and project configuration files"
        },
        "tests": {
            "description": "Test scripts and test data"
        },
        "secrets": {
            "description": "Sensitive configuration files (to be gitignored)"
        }
    }
} 